#! /bin/sh
##########################################################################
#    (c) Copyright 2021-2025 JRCS Ltd - All Rights Reserved              #
##########################################################################

if test "${SYSLOG_SERVER}"
	then
		exec /sbin/syslogd -n -R ${SYSLOG_SERVER}
	fi

if test -d /opt/data/logs/.
	then
		exec /sbin/syslogd -n -O /opt/data/logs/messages -b 9 -s 100000
	fi

exec /sbin/syslogd -n -O -
